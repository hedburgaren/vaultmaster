# VaultMaster — Environment Configuration
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# ── Database ──
POSTGRES_DB=vaultmaster
POSTGRES_USER=vaultmaster
POSTGRES_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD
DATABASE_URL=postgresql+asyncpg://vaultmaster:CHANGE_ME_TO_A_STRONG_PASSWORD@db:5432/vaultmaster

# ── Redis ──
REDIS_URL=redis://redis:6379/0

# ── JWT / Security ──
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_ME_GENERATE_A_RANDOM_KEY

# ── Encryption (optional) ──
# age public key for backup encryption
AGE_PUBLIC_KEY=

# ── SMTP (optional) ──
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# ── Notification channels (optional, can also be configured via UI) ──
SLACK_WEBHOOK_URL=
NTFY_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
